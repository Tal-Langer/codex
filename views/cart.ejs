<!DOCTYPE html>
<html>
<head>
  <title>Your Cart</title>
</head>
<body>
  <%- include("partials/navbar") %>
  <h1>Your Cart</h1>
  <% if (cart.length === 0) { %>
    <p>Cart is empty.</p>
  <% } else { %>
    <ul>
      <% cart.forEach(item => { %>
        <li>
          <strong><%= item.product.title %></strong>
          <ul>
            <% for (let f in item.fields) { %>
              <li><%= f %>: <%= item.fields[f] %></li>
            <% } %>
          </ul>
        </li>
      <% }) %>
    </ul>
    <form method="POST" action="/checkout">
      <button type="submit">Checkout</button>
    </form>
  <% } %>
  <a href="/">Back</a>
</body>
</html>
